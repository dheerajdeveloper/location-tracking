<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.dheeraj.location_tracking.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="75dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="368dp"
        android:layout_height="501dp"
        android:id="@+id/constraintLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="261dp"
            android:layout_height="60dp"
            android:onClick="startSendingLocation"
            android:text="Start_Sending_Location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="257dp"
            android:layout_height="52dp"
            android:onClick="fetchAddressButtonHandler"
            android:text="Get Current Address"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="252dp"
            android:layout_height="58dp"
            android:onClick="sendMessageForMap"
            android:text="Map"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/latitude_text"
            android:layout_marginTop="8dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.48"
            tools:layout_editor_absoluteY="272dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/latitude_text"
            android:layout_width="329dp"
            android:layout_height="34dp"
            android:text="Latitude"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/longitude_text" />

        <TextView
            android:id="@+id/longitude_text"
            android:layout_width="329dp"
            android:layout_height="35dp"
            android:text="Longitude"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/latitude_text"
            app:layout_constraintRight_toRightOf="@+id/last_update_time_text" />

        <TextView
            android:id="@+id/last_update_time_text"
            android:layout_width="329dp"
            android:layout_height="35dp"
            android:text="Last Update Time"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/longitude_text"
            app:layout_constraintRight_toRightOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="329dp"
            android:layout_height="35dp"
            android:text="Location Address"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/last_update_time_text"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintRight_toRightOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="329dp"
            android:layout_height="35dp"
            android:text="Location Model"
            android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/last_update_time_text"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
